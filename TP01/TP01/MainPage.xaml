<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP01.MainPage"
             Title="Aplicação Teste"
             BackgroundColor="Black">
 

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
           >
            <Grid
            RowSpacing="10"
            ColumnSpacing="10"
            Padding="20">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Text="ID:" TextColor="White" Grid.Row="0" Grid.Column="0" VerticalOptions="Center"/>
                <Entry Placeholder="Usuário" Grid.Row="0" Grid.Column="1" x:Name="EntryId"/>

                <Label Text="Pass:" TextColor="White" Grid.Row="1" Grid.Column="0" VerticalOptions="Center"/>
                <Entry Placeholder="Senha" Grid.Row="1" Grid.Column="1" VerticalOptions="Center" x:Name="EntryPass" IsPassword="True"/>

            </Grid>

           
            <Button Text="OK" Clicked="Verification" />
            <Button Text="Limpar" Clicked="Clean"/>
            <Button Text="Créditos" Clicked="Creditos"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
