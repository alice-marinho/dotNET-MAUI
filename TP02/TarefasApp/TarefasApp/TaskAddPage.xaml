<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TarefasApp.TaskAddPage"
             Title="Adicionar Tarefa"
             BackgroundColor="#F5F5F5">

    <VerticalStackLayout Padding="10">
        <Label Text="Titulo" FontSize="16" TextColor="Black" FontAttributes="Bold"  Padding="10"/>
        <Entry x:Name="TitleEntry"
               BackgroundColor="White"
               TextColor="Black"/>

        <Label Text="Descrição" FontSize="16" TextColor="Black" FontAttributes="Bold" Padding="10"/>
        <Editor x:Name="DescriptionEditor" Placeholder="Descrição"
                BackgroundColor="White"
                FontSize="14"
                HeightRequest="100"
                TextColor="Black"/>

        <Label Text="Data de Criação" FontSize="16" TextColor="Black" FontAttributes="Bold"  Padding="10"/>
        <DatePicker x:Name="DatePicker"
                    BackgroundColor="White"
                    TextColor="Black"/>

        <Label Text="Prioridade" FontSize="16" TextColor="Black" FontAttributes="Bold"  Padding="10"/>
        <Picker x:Name="PriorityPicker"
                BackgroundColor="White"
                TextColor="Black">
            <Picker.Items>
                <x:String>Baixa</x:String>
                <x:String>Média</x:String>
                <x:String>Alta</x:String>
            </Picker.Items>
            
        </Picker>

        <Button Text="Adicionar" Clicked="OnAddClicked" 
                BackgroundColor="LightGreen"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                HeightRequest="50"/>
        <Button Text="Cancelar" Clicked="OnCancelClicked" 
                BackgroundColor="LightGray"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                HeightRequest="50"/>
    </VerticalStackLayout>
</ContentPage>
