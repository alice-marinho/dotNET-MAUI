<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TarefasApp.TaskEditPage"
             Title="Editar Tarefa"
             BackgroundColor="#F5F5F5">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Entry Text="{Binding Title, Mode=TwoWay}" 
               Placeholder="Título" 
               TextColor="Black"
               BackgroundColor="White"
               FontSize="16"/>

        <Editor Text="{Binding Description, Mode=TwoWay}" 
                TextColor="Black"
                Placeholder="Descrição" 
                BackgroundColor="White"
                FontSize="14"
                HeightRequest="100"/>

        <DatePicker Date="{Binding CreationDate, Mode=TwoWay}" 
                    TextColor="Black"
                    BackgroundColor="White"/>

        <Picker Title="Prioridade" SelectedItem="{Binding Priority, Mode=TwoWay}" 
                BackgroundColor="White" TextColor="Black">
            <Picker.Items>
                <x:String>Baixa</x:String>
                <x:String>Média</x:String>
                <x:String>Alta</x:String>
            </Picker.Items>
        </Picker>

        <Button Text="Salvar" Clicked="OnSaveClicked"
                BackgroundColor="#4CAF50"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                HeightRequest="50"/>

        <Button Text="Cancelar" Clicked="OnCancelClicked"
                BackgroundColor="#B0B0B0"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                HeightRequest="50"/>

    </VerticalStackLayout>
</ContentPage>
